rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // Favorites collection
    match /favorites/{favoriteId} {
      // favoriteId format: {userId}_{vehicleId}
      allow read: if isAuthenticated() && 
                    (favoriteId.split('_')[0] == request.auth.uid || 
                     resource.data.userId == request.auth.uid);
      allow list: if isAuthenticated() && 
                    request.query.limit <= 100;
      allow create: if isAuthenticated() && 
                      favoriteId.split('_')[0] == request.auth.uid &&
                      request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && favoriteId.split('_')[0] == request.auth.uid;
      allow update: if false; // No updates allowed, only create/delete
    }
    
    // Vehicles collection
    match /vehicles/{vehicleId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.arrendadorId;
      allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.arrendadorId;
    }

    // Reservations collection
    match /reservations/{reservationId} {
      // Allow read if user is the renter or the owner
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        resource.data.arrendadorId == request.auth.uid
      );
      // Allow list (query) for user's own reservations
      allow list: if isAuthenticated();
      // Allow create if user is creating their own reservation
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow update if user is renter or owner (for status changes, etc.)
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        resource.data.arrendadorId == request.auth.uid
      );
      // Allow delete if user is renter or owner
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        resource.data.arrendadorId == request.auth.uid
      );
    }

    // Check-ins collection
    match /checkIns/{checkInId} {
      // Allow read if user is authenticated AND either:
      // - Document doesn't exist yet (for checking if checkIn exists)
      // - Document exists and user is participant
      allow read: if isAuthenticated() && (
        resource == null ||
        resource.data.renterId == request.auth.uid || 
        resource.data.ownerId == request.auth.uid
      );
      allow create: if isAuthenticated() && (
        request.resource.data.renterId == request.auth.uid || 
        request.resource.data.ownerId == request.auth.uid
      );
      allow update: if isAuthenticated() && (
        resource.data.renterId == request.auth.uid || 
        resource.data.ownerId == request.auth.uid
      );
    }

    // Check-outs collection
    match /checkOuts/{checkOutId} {
      allow read, write: if isAuthenticated();
    }
    
    // Availability collection (Public read access)
    match /availability/{availabilityId} {
      allow read: if true;
      allow create, delete: if isAuthenticated();
    }

    // Chats collection - Secure participant validation
    match /chats/{chatId} {
      // Helper to check if user is a participant in existing document
      function isParticipant() {
        return isAuthenticated() && request.auth.uid in resource.data.participants;
      }
      
      // Helper to check if user is a participant in the document being created/updated
      function isParticipantInRequest() {
        return isAuthenticated() && request.auth.uid in request.resource.data.participants;
      }
      
      // Allow read if user is a participant (for existing chats)
      // OR if trying to read during creation check (chatId matches reservationId pattern)
      allow read: if isAuthenticated() && (
        (resource == null) || // Document doesn't exist yet (during creation)
        isParticipant() // User is a participant in existing chat
      );
      
      // Allow create only if user is in the participants array being created
      allow create: if isParticipantInRequest();
      
      // Allow update only to participants of existing chat
      allow update: if isParticipant();
      
      match /messages/{messageId} {
        // Get parent chat document to validate participant
        function getChatData() {
          return get(/databases/$(database)/documents/chats/$(chatId)).data;
        }
        
        function isChatParticipant() {
          return isAuthenticated() && request.auth.uid in getChatData().participants;
        }
        
        // Allow read messages only to chat participants
        allow read: if isChatParticipant();
          
        // Allow create messages only to chat participants and if senderId matches auth uid
        allow create: if isChatParticipant() && 
                        request.resource.data.senderId == request.auth.uid;
        
        // Allow update messages for read receipts (readBy field updates)
        allow update: if isChatParticipant();
      }
    }
  }
}