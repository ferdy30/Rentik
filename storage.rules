rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Licencias almacenadas en licenses/<uid>/<filename>
    match /licenses/{uid}/{filename} {
      // Permitir escribir Y leer al dueño (necesario para getDownloadURL)
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Otros assets por usuario, si se necesitan en el futuro
    match /users/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Imágenes de vehículos
    match /vehicles/{userId}/{allPaths=**} {
      allow read: if true; // Permitir lectura pública para mostrar vehículos en búsqueda
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Imágenes de Check-in
    match /checkIns/{checkInId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Imágenes de Check-out
    match /checkOuts/{checkOutId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Imágenes de chat
    match /chats/{chatId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
